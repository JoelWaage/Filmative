@{ 
    ViewData["Title"] = "Filmative";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $('.hello-ajax').click(function () {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("HelloAjax")',
                success: function (result) {
                    $('#result1').html(result);
                }
            });
        });
    });
</script>

<h1>Welcome to Filmative!</h1>
<hr />

<div class="rows">
    <div class="col-md-2">
        <button class="btn btn-default">@Html.ActionLink("Browse Movies", "Index", "Movies")</button>
    </div>
    <div class="col-md-2">
        <button class="btn btn-default">@Html.ActionLink("Checkout Scores", "Index", "Scores")</button>
    </div>
</div>
<hr />
<div>
    <h2>Basic AJAX</h2>
    <h4 class="hello-ajax">Hello AJAX</h4>
    <div id="result1"></div>
</div>
  