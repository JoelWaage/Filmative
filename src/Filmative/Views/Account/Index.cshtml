@{ 
    ViewData["Title"] = "Filmative";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

<div class="jumbotron">
    <h2>Filmative</h2>
    <hr />
    @if (User.Identity.IsAuthenticated)
    {
        <p>Hello @User.Identity.Name!</p>
        <p>@Html.ActionLink("Movie List", "Index", "Movies")</p>
        <p>@Html.ActionLink("Scores", "Index", "Scores")</p>
        @using (Html.BeginForm("LogOff", "Account"))
        {
            <input type="submit" class="btn btn-default" value="Log Out" />

        }
    }
    else
    {
        <p>@Html.ActionLink("Log In", "Login")</p>
        <p>@Html.ActionLink("Create an Account", "Register")</p>
        <p>@Html.ActionLink("Movies", "Index", "Movies")</p>
    }
</div>

