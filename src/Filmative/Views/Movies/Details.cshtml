@model Filmative.Models.Movie

@{ 
    ViewData["Title"] = @Html.DisplayFor(model => model.Title);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $('.score-display').click(function () {
            $.ajax({
                type: 'GET',
                dataType: 'html',
                url: '@Url.Action("ScorePartial")',
                success: function (result) {
                    $('#score-result').html(result);
                }
            });
        });
    });
</script>

<h1>@Html.DisplayFor(model => model.Title)</h1>
<hr />
<h2>Further Api Information will display here</h2>
<hr />
<p>@Html.ActionLink("Movie List", "Index")</p>

